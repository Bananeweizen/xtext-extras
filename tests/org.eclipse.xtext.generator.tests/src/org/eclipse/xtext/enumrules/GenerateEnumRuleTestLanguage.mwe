<workflow>
	<property name="standardFragments" value="org/eclipse/xtext/TestLanguagesFragments.mwe"/>
	<property name="projectName" value="org.eclipse.xtext.generator.tests"/>
	<property name="runtimeProject" value="../${projectName}"/>
	
	<property name="enums.genmodel" value="platform:/resource/org.eclipse.xtext.generator.tests/src/org/eclipse/xtext/enumrules/enums.genmodel"/>
	
	<bean class="org.eclipse.emf.mwe.utils.StandaloneSetup" platformUri="${runtimeProject}/.."/>
	
	<component class="org.eclipse.emf.mwe.utils.DirectoryCleaner" directory="${runtimeProject}/src-gen/org/eclipse/xtext/enumrules"/>
	
	<component class="org.eclipse.xtext.generator.Generator">
		<pathRtProject value="${runtimeProject}"/>
		<projectNameRt value="${projectName}"/>
		
		<language uri="classpath:/org/eclipse/xtext/enumrules/EnumRulesTestLanguage.xtext">
			<fragment file="${standardFragments}" genModels="${enums.genmodel}"/>
		</language>
		<language uri="classpath:/org/eclipse/xtext/enumrules/EnumAndReferenceTestLanguage.xtext">
			<fragment file="${standardFragments}"/>
		</language>
	</component>
</workflow>