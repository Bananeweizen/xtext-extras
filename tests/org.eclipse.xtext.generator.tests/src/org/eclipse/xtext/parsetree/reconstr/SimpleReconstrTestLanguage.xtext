language org.eclipse.xtext.parsetree.reconstr.SimpleReconstrTestLanguage
generate simplerewritetest "http://simple/rewrite/test"

Op returns Expression: 
	Term ({Op.values+=current} values+=Term)*;
	
Term returns Expression:
	Atom | TwoNumbers | ManyStrings | Parens | Type | Ref2 | Spare;
	
Atom: 
	name=ID;

Parens returns Expression: 
	'(' Op ')' em='!'?;
	
TwoNumbers:
	num1=INT num2=INT ('#' num3+=INT)*;

ManyStrings: 
	'=' (str1+=STRING)* str2+=STRING; 

Type :
	'type' name=ID 'extends' ^extends=[Type];

Ref2:
	'#2' ref2=('mykeyword1' | STRING | 'mykeyword2');
	
Spare:
	'#3' id+=ID ('.' id+=ID)*;


