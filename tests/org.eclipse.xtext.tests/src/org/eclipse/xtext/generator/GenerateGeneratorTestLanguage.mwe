<workflow>
	<property name="standardFragments" value="org/eclipse/xtext/TestLanguagesFragments.mwe"/>
	<property name="genmodelReferenceFragments" value="org/eclipse/xtext/GenModelReferenceFragments.mwe"/>
	<property name="projectName" value="org.eclipse.xtext.tests"/>
	<property name="runtimeProject" value="../${projectName}"/>
	
	<bean class="org.eclipse.emf.mwe.utils.StandaloneSetup" platformUri="${runtimeProject}/.."/>
	
	<component class="org.eclipse.emf.mwe.utils.DirectoryCleaner" directory="${runtimeProject}/src-gen/org/eclipse/xtext/generator"/>
	
	<component class="org.eclipse.xtext.generator.Generator">
		<pathRtProject value="${runtimeProject}"/>
		<projectNameRt value="${projectName}"/>
		
<!--		
		<language uri="classpath:/org/eclipse/xtext/generator/GeneratorTestLanguage.xtext">
			<fragment file="${standardFragments}"/>
		</language>
-->
		<language uri="classpath:/org/eclipse/xtext/generator/ecore/EcoreFragmentTestLanguage.xtext">
			<fragment file="${genmodelReferenceFragments}" referencedGenModel="platform:/resource/${projectName}/src/org/eclipse/xtext/generator/ecore/Genmodel.genmodel"/>
		</language>
		<language uri="classpath:/org/eclipse/xtext/generator/grammarAccess/GrammarAccessTestLanguage.xtext">
			<fragment file="${standardFragments}"/>
		</language>
	</component>
</workflow>